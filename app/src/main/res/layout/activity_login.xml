<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#fff"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.LoginActivity">

    <ImageView
        android:layout_width="215.1dp"
        android:layout_height="159.17dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="67.11dp"
        android:src="@drawable/ic_account" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="29.82dp"
        android:fontFamily="@font/montserratbold"
        android:text="LOGIN"
        android:textSize="22dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="29dp"
        android:background="@drawable/grey_button"
        android:paddingHorizontal="16dp"
        android:paddingVertical="12dp">

        <EditText
            android:id="@+id/login_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@null"
            android:fontFamily="@font/montserratregular"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:textSize="13sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="13dp"
        android:background="@drawable/grey_button"
        android:paddingHorizontal="16dp"
        android:paddingVertical="12dp">

        <EditText
            android:id="@+id/login_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@null"
            android:fontFamily="@font/montserratregular"
            android:hint="Password"
            android:inputType="textPassword"
            android:maxLines="1"
            android:textSize="13sp" />
    </LinearLayout>

    <Button
        android:id="@+id/login_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="29dp"
        android:background="@drawable/green_button"
        android:text="Login"
        android:textColor="#fff"
        android:textSize="14sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="19dp"
        android:fontFamily="@font/montserratregular"
        android:text="Terdapat masalah saat login ?"
        android:textSize="13sp" />

    <Button
        android:id="@+id/login_hubungiAdmin"
        android:drawablePadding="2dip"
        android:paddingLeft="20dip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="18dp"
        android:background="@drawable/white_button"
        android:drawableLeft="@drawable/ic_call"
        android:fontFamily="@font/montserratbold"
        android:text="Hubungi Admin"
        android:textColor="#4D925D"
        android:textSize="14sp" />
</LinearLayout>